<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500px"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insert a name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="semester" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputSemester2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insert a semester" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="teacherId" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputTeacherId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insert teacher's id" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit" />
</LinearLayout>